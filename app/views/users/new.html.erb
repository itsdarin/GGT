<% provide(:title, 'Register') %>
<h1>Register</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= render 'fields', f: f %>
			<%= f.submit "Register Now", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>